    }

    .homeDetail>.detail>.right>.homeDetail-1>a>strong {
      height: 100%;
      color: #4a4a4a;
      font-size: 18px;
      padding-left: 8px;
    }

    .homeDetail>.detail>.right>.homeDetail-1>div {
      display: flex;
      width: 100%;
      justify-content: space-between;
    }

    .homeDetail>.detail>.right>.homeDetail-1>div>button {
      margin-top: 16px;
      padding: 10px 15px 10px 15px;
      border-radius: 10px;
      border: 1px solid black;
      width: 45%;
      font-size: 14px;
    }

    .homeDetail>.detail>.right>.homeDetail-1>div>button>i {
      font-size: 16px;
      margin-right: 8px;
    }

    .homeDetail>.detail>.right>.homeDetail-2 {

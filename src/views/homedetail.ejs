  <style>
    .homeDetail {

      font-family: Roboto, sans-serif, "Arial Narrow Bold";
      display: flex;
      flex-direction: column;
      justify-content: center;
      place-content: center;
      align-items: center;
      height: 100%;
    }

    .homeDetail>div {
      display: flex;
      /* flex-direction: column; */
      place-content: center;
      align-items: center;
      justify-content: center;
      width: 100vw;
      background-color: rgba(128, 128, 128, 0.273);
    }

    .homeDetail>div>.img {
      display: grid;
      grid-template-columns: repeat(4, 328px);
      grid-template-rows: repeat(2, 200px);
      column-gap: 10px;
      row-gap: 10px;
      padding-top: 20px;
      padding-bottom: 18px;
    }

    .homeDetail>div>.img>img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 5px;
    }

    .homeDetail>div>.img>.homeDetail1 {
      grid-column: 1/3;
      grid-row: 1/3;
    }

    .homeDetail>div>.img>.homeDetail2 {
      grid-column: 3/4;
      grid-row: 1/2;
    }

    .homeDetail>div>.img>.homeDetail3 {
      grid-column: 3/4;
      grid-row: 2/3;
    }

    .homeDetail>div>.img .homeDetail4 {
      grid-column: 4/5;
      grid-row: 1/2;
    }

    .homeDetail>div>.img .homeDetail5 {
      grid-column: 4/5;
      grid-row: 2/3;
    }

    .homeDetail>.detail {
      background-color: white;
      display: flex;
      width: calc(70% + -4px);
    }

    .homeDetail>.detail>.left {
      width: 70%;
      margin-right: 20px;
    }

    .homeDetail>.detail>.left>.homeDetail-1 {
      padding-top: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid rgba(128, 128, 128, 0.189);
    }

    .homeDetail>.detail>.left>.homeDetail-1>.lien-ket {
      margin-bottom: 13px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.lien-ket>span {
      color: #3d4d65;
      font-size: 13px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.lien-ket>span>a {
      text-decoration: none;
      color: #3d4d65;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.title {
      padding-bottom: 10px;
      margin-bottom: 10px;
      border-bottom: 1px solid rgba(128, 128, 128, 0.226);
    }

    .homeDetail>.detail>.left>.homeDetail-1>.title>h3 {
      font-size: 24px;
      color: #30456e;
      margin-bottom: 20px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.title>span {
      font-size: 15px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.title>span>a {
      text-decoration: none;
      color: #0098da;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail {
      display: flex;
      justify-content: space-between;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.left {
      display: flex;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.left>.left-1 {
      display: grid;
      margin-right: 30px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.left>.left-1>p {
      margin-bottom: 5px;
      font-size: 16px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.left>.left-1>span {
      font-size: 12px;
      margin-bottom: 5px;
      margin-top: 5px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.left>.left-2>p {
      margin-bottom: 5px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.right>button {
      margin-left: 16px;
      padding: 9px 20px;
      background-color: white;
      border: #0298da 1px solid;
      border-radius: 5px;
    }

    .homeDetail>.detail>.left>.homeDetail-1>.detail>.right>button>i {
      margin-right: 8px;
    }

    .homeDetail>.detail>.left>.homeDetail-2>.title>h3 {
      margin-top: 24px;
      margin-bottom: 8px;
      font-size: 20px;
    }

    .homeDetail>.detail>.left>.homeDetail-2>.content {
      padding: 16px;
      border: 1px solid rgba(128, 128, 128, 0.313);
      border-radius: 5px;
    }

    .homeDetail>.detail>.left>.homeDetail-2>.content>p {
      line-height: 30px;
      color: #000000cc;
    }


    .homeDetail>.detail>.right {
      width: 30%;
    }

    .homeDetail>.detail>.right>.homeDetail-1 {
      padding: 16px;
      border: 1px solid rgba(128, 128, 128, 0.268);
      box-shadow: 3px 3px 3px 3px rgba(128, 128, 128, 0.13);
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .homeDetail>.detail>.right>.homeDetail-1>h3 {
